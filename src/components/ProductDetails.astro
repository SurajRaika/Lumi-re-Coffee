---
interface Props {
    title: string;
    brand: string;
    description: string;
    imageUrl: string;
    imageAlt: string;
    badges: string[];
    features: string[];
}

const { 
    title, 
    brand, 
    description, 
    imageUrl, 
    imageAlt,
    badges = [],
    features = []
} = Astro.props;
---



<main id="collection">
    <div class="relative mx-auto px-8 max-w-7xl py-12 md:px-12">
        <div class="grid kanit-medium grid-cols-1 gap-6 md:grid-cols-2">
            <figure class="relative group">
                <img
                    class="w-full rounded shadow-2xl"
                    src={imageUrl}
                    alt={imageAlt}                 width="1310"
                    height="873"
                />
            </figure>

            <div class="flex flex-col justify-center w-full space-y-3 md:pl-16">
                <!-- Product Badge -->
                <div class="inline-flex items-center space-x-2">
                    <span class="px-3 py-1 text-xs font-semibold text-tomato-500 bg-tomato-500/10 rounded-full">Premium Collection</span>
                    <span class="px-3 py-1 text-xs font-semibold text-negroni-400 bg-negroni-400/10 rounded-full">Organic</span>
                </div>
            
                <!-- Product Title and Brand -->
                <div class="space-y-3">
                    <h1 class="text-4xl md:text-5xl font-extrabold text-white leading-tight tracking-tight">{title}</h1>
                    <p class="text-sm text-negroni-400 uppercase tracking-wider flex items-center">
                        <span class="inline-block w-6 h-[1px] bg-negroni-400 mr-3"></span>
                        By {brand}
                    </p>
                </div>
            
                <!-- Product Description -->
                <div class="space-y-6">
                    <p class="text-xl text-tomato-500 font-semibold">Artisanal Premium Organic Tea</p>
                    <p class="text-base md:text-lg text-gray-300 leading-relaxed max-w-2xl">
                        Experience the harmonious fusion of citrus zest and wild forest mint in our signature Echo Leaf blend. 
                        Each sip unfolds a story of carefully selected organic herbs, creating a bold yet balanced infusion that:
                    </p>
                    <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-300">
                        {features.map(feature => (
                            <li class="flex items-center space-x-2">
                                <span class="w-1.5 h-1.5 rounded-full bg-tomato-500"></span>
                                <span>{feature}</span>
                            </li>
                        ))}
                    </ul>
                </div>
            
               
            </div>


        </div>
    </div>
</main>
