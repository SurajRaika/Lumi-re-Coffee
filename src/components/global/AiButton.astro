<!-- Spotlight Overlay -->
<div class="bg-charcoal-500/60 fixed top-0 -left-20 p-3 w-screen h-screen z-10 hidden" id="coffee-spotlight">
  <div class="absolute top-24 right-4 pl-3">
    <div class="flex items-start -gap-1">
      <h3 class="text-xl p-1 px-2 bg-white rounded-sm tracking-tight text-[#FD6043] font-bold kanit-bold">
        Click Here To Meet Your AI Coffee Assistant
      </h3>
      <i class="fa-solid fa-turn-up font-bold text-white text-4xl -translate-x-1 -translate-y-5"></i>
    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const spotlight = document.getElementById("coffee-spotlight");

  // already seen? skip entirely
  if (localStorage.getItem("coffeeAssistantSeen")) return;

  // show spotlight after 2 seconds
  setTimeout(() => {
    spotlight.classList.remove("hidden");

    // enable click-to-close AFTER 1 second visible
    setTimeout(() => {
      const closeHandler = () => {
        spotlight.classList.add("hidden");
        localStorage.setItem("coffeeAssistantSeen", "true");
        document.removeEventListener("click", closeHandler);
      };
      document.addEventListener("click", closeHandler);
    }, 1000);

  }, 2000);
});
</script>