---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/landing/Hero.astro";
import Products from "../components/landing/Products.astro";
---

<BaseLayout>

<main class="relative overflow-hidden">
    <div class="relative mx-auto px-8 max-w-7xl py-6 md:px-12">
        <div class="flex items-center justify-between">
            <!-- Back Button -->
            <a href="/" class="flex items-center space-x-2 text-negroni-500 hover:text-tomato-500 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                <span class="text-sm font-medium">Back to Collection</span>
            </a>

            <!-- Brand Info -->
            <div class="flex items-center space-x-2">
                <span class="uppercase tracking-widest text-sm text-negroni-500 font-semibold">
                    Presented by
                </span>
                <span class="text-[#fd6043] font-bold">Lumi√®re Coffee</span>
            </div>
        </div>
    </div>
</main>

    <main id="collection">
        <div class="relative mx-auto px-8 max-w-7xl py-12 md:px-12">
            <div class="grid kanit-medium grid-cols-1 gap-6 md:grid-cols-2">
              

                <figure class="relative group">
                    <a href="http://localhost:4321/echo-leaf-herbal-blend" class="absolute inset-0 z-10" aria-label="Botaniq Herbal Infusion Details"></a>
                    <img
                        class="w-full rounded shadow-2xl"
                        src="https://cdn.dribbble.com/users/1622978/screenshots/16397986/media/75e59a9fcf94b8a51764df66ce7a1d4f.jpg?compress=1&resize=1600x1200&vertical=top"
                        alt="Premium Organic Tea - Botaniq Herbal Infusion"
                        width="1310"
                        height="873"
                    />
                </figure>

                <div class="flex flex-col justify-center w-full space-y-8 md:pl-16">
                    <!-- Product Badge -->
                    <div class="inline-flex items-center space-x-2">
                        <span class="px-3 py-1 text-xs font-semibold text-tomato-500 bg-tomato-500/10 rounded-full">Premium Collection</span>
                        <span class="px-3 py-1 text-xs font-semibold text-negroni-400 bg-negroni-400/10 rounded-full">Organic</span>
                    </div>
                
                    <!-- Product Title and Brand -->
                    <div class="space-y-3">
                        <h1 class="text-4xl md:text-5xl font-extrabold text-white leading-tight tracking-tight">Wellness Tea Pouch</h1>
                        <div class="flex items-center justify-between">
                            <p class="text-sm text-negroni-400 uppercase tracking-wider flex items-center">
                                <span class="inline-block w-6 h-[1px] bg-negroni-400 mr-3"></span>
                                Botaniq Herbal Infusion
                            </p>
                            <p class="text-2xl font-bold text-tomato-500">$35</p>
                        </div>
                    </div>
                
                    <!-- Product Description -->
                    <div class="space-y-6">
                        <p class="text-xl text-tomato-500 font-semibold">Premium Tea Collection</p>
                        <p class="text-base md:text-lg text-gray-300 leading-relaxed max-w-2xl">
                            Experience our carefully curated collection of wellness tea pouches, perfect for your daily ritual. Each set contains individually sealed pouches designed for freshness and convenience, bringing you the pure essence of nature in every cup.
                        </p>
                        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-300">
                            <li class="flex items-center space-x-2">
                                <span class="w-1.5 h-1.5 rounded-full bg-tomato-500"></span>
                                <span>15 individual tea pouches</span>
                            </li>
                            <li class="flex items-center space-x-2">
                                <span class="w-1.5 h-1.5 rounded-full bg-tomato-500"></span>
                                <span>100% organic botanicals</span>
                            </li>
                            <li class="flex items-center space-x-2">
                                <span class="w-1.5 h-1.5 rounded-full bg-tomato-500"></span>
                                <span>Resealable freshness pouches</span>
                            </li>
                            <li class="flex items-center space-x-2">
                                <span class="w-1.5 h-1.5 rounded-full bg-tomato-500"></span>
                                <span>Eco-friendly packaging</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>
</BaseLayout>
